
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a href="/student/create">Create</a>
<br />

@if(Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Dob</th>
            <th>Cgpa</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Dob</td>
                <td>@item.Cgpa</td>
                <td>@item.Department.Name</td>
                <td>
                    <a href="/student/edit/@item.Id">Edit</a>
                    <a class="text-danger" href="/student/delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
 }
else { 
    <h5 class="text-danger">No Student Found</h5>
}

