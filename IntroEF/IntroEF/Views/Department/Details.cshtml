
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<h3>Department Name: @Model.Name</h3>
<h5>List of Students:</h5>
<table class="table table-condensed">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Dob</th>
        <th>Cgpa</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model.Students)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Dob</td>
            <td>@item.Cgpa</td>
            <td>
                <a href="/student/edit/@item.Id">Edit</a>
                <a class="text-danger" href="/student/delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>

