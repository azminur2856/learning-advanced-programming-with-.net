@{
    ViewBag.Title = "Delete";
}

<h2>Delete Student</h2>

@if (Model == null)
{
    <div class="alert alert-warning">
        Student not found.
    </div>
}
else
{
    <div>
        <h4>Are you sure you want to delete this student?</h4>
        <table>
            <tr>
                <td>ID: @Model.Id</td>
            </tr>
            <tr>
                <td>NAME: @Model.Name</td>
            </tr>
            <tr>
                <td>DOB: @Model.Dob</td>
            </tr>
            <tr>
                <td>CGPA: @Model.Cgpa</td>
            </tr>
        </table>
    </div>

    <form method="post">
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        <a href="/Student/Index" class="btn btn-default">Cancel</a>
    </form>
}
