@{
    ViewBag.Title = "ShowCart";
}

<h2>ShowCart</h2>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["Msg"]
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Qty</th>
        <th>Unite Price</th>
        <th>Total Price</th>
    </tr>
    @{ double gTotal = 0; double uTotal = 0;}
    @foreach (var item in Model)
    {
        {
            uTotal = item.Price * item.Qty;
            gTotal += uTotal;
        }

        <tr>
            <td>@item.Name</td>
            <td>
                <a href="/order/decrease/@item.Id" class="btn btn-outline-secondary btn-sm" title="Decrease">
                    <i class="bi bi-dash"></i>
                </a>
                <span class="mx-2">@item.Qty</span>
                <a href="/order/increase/@item.Id" class="btn btn-outline-secondary btn-sm" title="Increase">
                    <i class="bi bi-plus"></i>
                </a>
            </td>
            <td>@item.Price</td>
            <td>@uTotal</td>
        </tr>
    }
    <tr>
        <th class="text-end" colspan="3">Total:</th>
        <th>@gTotal</th>
    </tr>
    <tr>
        <td colspan="4">
            <form method="post" action="/Order/PlaceOrder">
                <input type="hidden" name="gTotal" value="@gTotal" />
                <input type="submit" value="Place Order" class="btn btn-danger" />
            </form>
        </td>
    </tr>
</table>

<!-- Add Bootstrap Icons CDN if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
